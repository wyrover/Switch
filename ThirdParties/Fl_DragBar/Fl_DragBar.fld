				old_rx = rx - parent()->x();
				old_ry = ry - parent()->y();
			}
			return 1;
		}
		case FL_RELEASE:
		{
			fl_cursor(FL_CURSOR_DEFAULT);
			//		window()->redraw();	
			do_callback();
			return 1;
		}
		case FL_DRAG:
		{
			if ((rx != old_rx) || (ry != old_ry))
			{
				xx =  rx - old_rx;
				yy =  ry - old_ry;
				if (_type <  (int)Fl_DragBar::FLDRAG) 
				{
					window()->position(xx,yy);
				}
				else
				{
					parent()->position(xx,yy);
					if (parent()->parent()) 
						parent()->parent()->redraw();
					else
						window()->redraw();		
				}		
			}
			return 1;
		}
		case FL_MOVE:
		{
			return 0;
		}
		case FL_ENTER :
		{
			return 0;
		}
		
		case FL_LEAVE :
		{
			fl_cursor(FL_CURSOR_DEFAULT);
			return 1;
		}
