  Function {handle(int event)} {open private return_type int
  } {
    code {int rx,ry,xx,yy;
int mx,my;

	if (_type <  (int)Fl_DragBar::FLDRAG)
	{
		rx = Fl::event_x_root(); 
		ry = Fl::event_y_root();
	}
	else
	{ 
		rx = Fl::event_x();
		ry = Fl::event_y();
